{
	"manifest_version": 2,
	"name": "SameTab - keep only one copy of the tab open",
	"description": "",
	"version": "1.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["index.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"]
		}
	],

	"permissions": [
		"tabs",
		"activeTab",
        "notifications",
        "storage"
	]
}